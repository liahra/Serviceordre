@model IEnumerable<Serviceordre.Models.ServiceOrder>

@{
    ViewData["Title"] = "Liste over ordre";
}

<h1>Ordreliste</h1>

<p>Her er en liste over ordre, yay!!</p>

<p>
    <a asp-action="Create">Opprett ny ordre</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceOrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceOrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServiceOrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
